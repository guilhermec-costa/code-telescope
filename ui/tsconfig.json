{
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "./dist",
    "noEmit": false,
    "moduleResolution": "Bundler",
    "target": "es2017",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "baseUrl": "..",
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./**/*.ts",
    "../shared/**/*.ts",
    "../shared/**/*.d.ts"
  ],
  "exclude": []
}