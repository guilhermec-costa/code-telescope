{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "noEmit": false,
    "moduleResolution": "Bundler",
    "target": "es2017",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts",
    "../shared/**/*.ts",
    "../shared/**/*.d.ts",
    "../shared/types/*.d.ts"
  ],
  "exclude": [
    "./dist",
    "./tests/*"
  ]
}