{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.ts", "**/*.js", "**/*.html", "**/*.css", "**/*.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "bracketSpacing": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "suspicious": {
        "noExplicitAny": {
          "level": "off"
        },
        "noEmptyBlock": {
          "level": "warn"
        }
      },
      "correctness": {
        "noUnusedVariables": {
          "fix": "unsafe",
          "level": "warn"
        },
        "noUnusedImports": {
          "fix": "safe",
          "level": "info"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "indentStyle": "space",
      "lineWidth": 120,
      "indentWidth": 2
    }
  },
  "html": {
    "formatter": {
      "enabled": true,
      "bracketSameLine": false,
      "whitespaceSensitivity": "css",
      "indentScriptAndStyle": false,
      "selfCloseVoidElements": "never"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 4,
      "indentStyle": "space"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
