{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.ts", "src/**/*.ts", "ui/**/*.html", "ui/**/*.css", "ui/**/*.js"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "bracketSpacing": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "suspicious": {
        "noExplicitAny": {
          "level": "off"
        },
        "noEmptyBlock": {
          "level": "warn"
        }
      },
      "correctness": {
        "noUnusedVariables": {
          "fix": "unsafe",
          "level": "warn"
        },
        "noUnusedImports": {
          "fix": "safe",
          "level": "info"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "indentStyle": "space",
      "lineWidth": 120,
      "indentWidth": 2
    }
  },
  "html": {
    "formatter": {
      "enabled": true,
      "bracketSameLine": false,
      "whitespaceSensitivity": "css",
      "indentScriptAndStyle": false,
      "selfCloseVoidElements": "never"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
