{
    "name": "code-telescope",
    "displayName": "code-telescope",
    "repository": {
        "type": "git",
        "url": "https://github.com/guilhermec-costa/code-telescope"
    },
    "publisher": "guichina",
    "description": "",
    "version": "0.0.8",
    "engines": {
        "vscode": "^1.106.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./backend/dist/extension.js",
    "extensionDependencies": [
        "vscode.git"
    ],
    "contributes": {
        "commands": [
            {
                "command": "code-telescope.fuzzy.file",
                "title": "Code Telescope: File Fuzzy Finder"
            },
            {
                "command": "code-telescope.fuzzy.branch",
                "title": "Code Telescope: Branch Fuzzy Finder"
            },
            {
                "command": "code-telescope.fuzzy.wsText",
                "title": "Code Telescope: Workspace Text Finder"
            },
            {
                "command": "code-telescope.fuzzy.keybindings",
                "title": "Code Telescope: Keybindings"
            },
            {
                "command": "code-telescope.fuzzy.custom",
                "title": "Code Telescope: Pick Custom Finder"
            },
            {
                "command": "code-telescope.fuzzy.wsSymbols",
                "title": "Code Telescope: Workspace Symbols"
            },
            {
                "command": "code-telescope.fuzzy.recentFiles",
                "title": "Code Telescope: Recent Files"
            },
            {
                "command": "code-telescope.fuzzy.colorschemes",
                "title": "Code Telescope: Colorschemes"
            },
            {
                "command": "code-telescope.fuzzy.diagnostics",
                "title": "Code Telescope: Diagnostics"
            },
            {
                "command": "code-telescope.fuzzy.callHierarchy",
                "title": "Code Telescope: Call hierarchy"
            },
            {
                "command": "code-telescope.fuzzy.tasks",
                "title": "Code Telescope: Tasks"
            }
        ],
        "configuration": {
            "title": "Code Telescope â€“ Search & Panel Settings",
            "properties": {
                "codeTelescope.wsFileFinder.excludeHidden": {
                    "type": "boolean",
                    "default": true,
                    "description": "Exclude hidden files and folders (dotfiles) from file search results."
                },
                "codeTelescope.wsFileFinder.includePatterns": {
                    "type": "array",
                    "default": [
                        "**/*"
                    ],
                    "description": "Glob patterns to include"
                },
                "codeTelescope.wsFileFinder.maxFileSize": {
                    "type": "number",
                    "default": 150,
                    "description": "Maximum file size ripgrep will search (e.g. 200k, 1M)"
                },
                "codeTelescope.wsFileFinder.excludePatterns": {
                    "type": "array",
                    "default": [
                        "**/node_modules/**",
                        "**/dist/**",
                        "**/build/**",
                        "**/out/**",
                        "**/.git/**",
                        "**/.svn/**",
                        "**/.hg/**",
                        "**/.next/**",
                        "**/.turbo/**",
                        "**/.cache/**",
                        "**/.parcel-cache/**",
                        "**/.vite/**",
                        "**/.nuxt/**",
                        "**/coverage/**",
                        "**/*.jar",
                        "**/*.jar*",
                        "**/*.zip"
                    ],
                    "description": "Glob patterns to exclude from file search"
                },
                "codeTelescope.wsFileFinder.maxResults": {
                    "type": "number",
                    "default": 2000,
                    "description": "Max number of results to list"
                },
                "codeTelescope.wsFileFinder.textDisplay": {
                    "type": "string",
                    "enum": [
                        "relative",
                        "absolute",
                        "filename-only"
                    ],
                    "default": "relative",
                    "description": "How to display file path"
                },
                "codeTelescope.wsTextFinder.excludePatterns": {
                    "type": "array",
                    "default": [
                        "**/node_modules/**",
                        "**/dist/**",
                        "**/build/**",
                        "**/out/**",
                        "**/.git/**",
                        "**/.svn/**",
                        "**/.hg/**",
                        "**/.next/**",
                        "**/.turbo/**",
                        "**/.cache/**",
                        "**/.parcel-cache/**",
                        "**/.vite/**",
                        "**/.nuxt/**",
                        "**/coverage/**"
                    ],
                    "description": "Glob patterns to exclude from file search"
                },
                "codeTelescope.wsTextFinder.maxColumns": {
                    "type": "number",
                    "default": 500,
                    "description": "Maximum number of columns per line before ripgrep stops reading the line"
                },
                "codeTelescope.wsTextFinder.maxFileSize": {
                    "type": "string",
                    "default": "200K",
                    "description": "Maximum file size ripgrep will search (e.g. 200k, 1M)"
                },
                "codeTelescope.wsTextFinder.ignoreCase": {
                    "type": "boolean",
                    "default": true,
                    "description": "Perform case-insensitive search"
                },
                "codeTelescope.wsTextFinder.fixedString": {
                    "type": "boolean",
                    "default": false,
                    "description": "Treat the search query as a literal string instead of a regular expression"
                },
                "codeTelescope.wsTextFinder.maxResults": {
                    "type": "number",
                    "default": 2000,
                    "description": "Maximum number of search results to return"
                },
                "codeTelescope.preview.scrollBehavior": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "instant",
                        "smooth"
                    ],
                    "default": "instant"
                },
                "codeTelescope.preview.verticalScrollFraction": {
                    "type": "string",
                    "enum": [
                        "1/2",
                        "1/3",
                        "1/4"
                    ],
                    "default": "1/2",
                    "description": "Controls how the preview scrolls vertically to reveal the target line"
                },
                "codeTelescope.preview.horizontalScrollFraction": {
                    "type": "string",
                    "enum": [
                        "1/2",
                        "1/3",
                        "1/4"
                    ],
                    "default": "1/2",
                    "description": "Controls how the preview scrolls horizontally to reveal the target column"
                },
                "codeTelescope.preview.showLineNumbers": {
                    "type": "boolean",
                    "default": false,
                    "description": "If line numbers should be displayed in the preview"
                },
                "codeTelescope.layout.mode": {
                    "type": "string",
                    "enum": [
                        "classic",
                        "ivy"
                    ],
                    "default": "classic",
                    "description": "Layout mode"
                },
                "codeTelescope.layout.ivyHeightPct": {
                    "type": "number",
                    "default": 75,
                    "description": "Height in percentage of the ivy layout container"
                },
                "codeTelescope.layout.rightSideWidthPct": {
                    "type": "number",
                    "default": 50,
                    "description": "Width in percentage of the right side of the panel"
                },
                "codeTelescope.layout.leftSideWidthPct": {
                    "type": "number",
                    "default": 50,
                    "description": "Width in percentage of the left side of the panel"
                },
                "codeTelescope.layout.panelContainerPct": {
                    "type": "number",
                    "default": 90,
                    "description": "Width in percentage of the panel container"
                },
                "codeTelescope.layout.promptFontSize": {
                    "type": "number",
                    "default": 16,
                    "description": "Font size (px) of the input prompt"
                },
                "codeTelescope.layout.resultsFontSize": {
                    "type": "number",
                    "default": 16,
                    "description": "Font size (px) of the results list items"
                },
                "codeTelescope.layout.previewFontSize": {
                    "type": "number",
                    "default": 18,
                    "description": "Font size (px) of the preview panel"
                },
                "codeTelescope.layout.borderSizeInPx": {
                    "type": "number",
                    "default": 1,
                    "description": "Border size (px)"
                },
                "codeTelescope.layout.borderRadiusInPx": {
                    "type": "number",
                    "default": 5,
                    "description": "Border radius (px)"
                },
                "codeTelescope.keybindings": {
                    "type": "object",
                    "description": "Custom keybindings for the Telescope panel",
                    "default": {
                        "moveDown": "ctrl+j",
                        "moveUp": "ctrl+k",
                        "confirm": "enter",
                        "close": "escape",
                        "scrollUp": "ctrl+u",
                        "scrollDown": "ctrl+d",
                        "scrollLeft": "ctrl+h",
                        "scrollRight": "ctrl+l"
                    },
                    "properties": {
                        "moveDown": {
                            "type": "string"
                        },
                        "moveUp": {
                            "type": "string"
                        },
                        "confirm": {
                            "type": "string"
                        },
                        "close": {
                            "type": "string"
                        },
                        "scrollUp": {
                            "type": "string"
                        },
                        "scrollDown": {
                            "type": "string"
                        },
                        "scrollLeft": {
                            "type": "string"
                        },
                        "scrollRight": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm run backend:bundle:prod",
        "backend:bundle:prod": "tsx scripts/bundle-backend.ts --env=prod",
        "backend:compile": "tsc -b ./backend",
        "backend:watch": "tsc -b -w ./backend",
        "backend:build": "tsx scripts/bundle-backend.ts",
        "pretest": "pnpm run backend:bundle:prod && pnpm run lint",
        "lint": "biome lint",
        "check": "biome check",
        "check:write": "biome check --write",
        "format:write": "biome format --write",
        "test:integration": "vscode-test",
        "test:unit": "vitest",
        "test:unit:watch": "vitest --watch",
        "test:unit:cov": "vitest --coverage",
        "prepare": "husky",
        "webview:dev": "tsx scripts/bundle-webview.ts --env=dev",
        "webview:dev:watch": "tsx scripts/bundle-webview.ts --env=dev --watch=true",
        "webview:prod": "tsx scripts/bundle-webview.ts --env=prod",
        "webview:prod:watch": "tsx scripts/bundle-webview.ts --env=prod --watch=true"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.11",
        "@types/mocha": "^10.0.10",
        "@types/node": "25.x",
        "@types/vscode": "^1.106.1",
        "@vitest/coverage-v8": "4.0.16",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.27.0",
        "husky": "^9.1.7",
        "jsdom": "^27.3.0",
        "lint-staged": "^16.2.7",
        "shiki": "^3.17.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "pnpm check:write"
        ]
    },
    "pnpm": {
        "overrides": {
            "jsdom": "22.1.0"
        }
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.44",
        "glob": "^13.0.0",
        "material-icon-theme": "^5.30.0"
    }
}
